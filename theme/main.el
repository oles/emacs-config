;; sets a pleasant global line spacing
(customize-set-variable 'line-spacing 0.11)


(set-face-attribute 'default nil :background "#171717" :foreground "#ABB2BF" :family "DejaVu Sans Mono")

(set-face-attribute 'bold nil :weight 'unspecified)

(set-face-attribute 'link nil :background 'unspecified :foreground "#66D9EF")
(set-face-attribute 'link-visited nil :foreground "#61AFEF")

(set-face-attribute 'error nil :foreground "red")
(set-face-attribute 'success nil :foreground "Green1")
(set-face-attribute 'warning nil :foreground "#E5C07B")

(set-face-attribute 'isearch nil :background "#C678DD" :foreground "#282C34")
(set-face-attribute 'isearch-fail nil :background 'unspecified :foreground "#BE5046")

(set-face-attribute 'region nil :background "#3E4451")
(set-face-attribute 'highlight nil :background 'unspecified :inherit 'region)
(set-face-attribute 'match nil :background "#303030" :foreground "#FFFAFA")

(set-face-attribute 'vertical-border nil :foreground "gray20")
(set-face-attribute 'fringe nil :background "#171717")
