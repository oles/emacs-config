(setq-default
 mode-line-format
 '("%e" mode-line-buffer-identification "   " mode-name "  " "(" "%l" ", " "%c" ")"))


(set-face-attribute 'mode-line nil :foreground "#ABB2BF" :background "#202020" :box 'unspecified)
(set-face-attribute 'mode-line-inactive nil :foreground 'unspecified :background "#202020" :box 'unspecified)

(set-face-attribute 'mode-line-buffer-id nil :foreground "#87D700" :weight 'normal)
